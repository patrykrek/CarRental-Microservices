@model List<app.Web.Models.DTO.GetUserReservationDTO>


<div class="text-center">
    <h1 class="display-4">My Reservations</h1>

    <table class="table">
        <thead>
            <tr>                
                <th>
                    Car ID
                </th>            
                <th>
                    Reservation Date
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Total Price
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>                   
                    <td>
                        @reservation.CarId
                    </td>                  
                    <td>
                        @reservation.ReservationDate
                    </td>
                    <td>
                        @reservation.StartDate
                    </td>
                    <td>
                        @reservation.EndDate
                    </td>
                    <td>
                        @reservation.TotalPrice
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>