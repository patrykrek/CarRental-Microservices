@{
    Layout = "_AuthLayout";
}

@model app.Web.Models.DTO.LoginRequestDTO   

<div class="container">
    <form asp-controller="Auth" asp-action="Login" method="post">
        <h1>Login</h1>

        <div class="input-box">
            <p>Username</p>

            <input type="email" placeholder="Email" asp-for="UserName"></input>

            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>

        <div class="input-box">
            <p>Password</p>

            <input type="password" placeholder="Password" asp-for="Password"></input>

            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="forgot-password">
            <a href="#">Forgot Password?</a>
        </div>

        <button class="btn">Login</button>

        <div class="no-account">
            <p>
                Don't have an account?
                <a asp-controller="Auth" asp-action="Register">Register</a>
            </p>
        </div>
        <div class="back-link">
            <a asp-controller="Home" asp-action="Index">Back</a>
        </div>
    </form>
</div>
