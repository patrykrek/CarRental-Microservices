@model app.Web.Models.ViewModel.ReservationCarViewModel


<form method="post" asp-action="CreateReservation" asp-controller="Reservation">
    <input type="hidden" asp-for="carDTO.Id" />
    <div class="pt-4">
        <div class="card container" style="border: 1px solid white;">
            <div class="card-header bg-black text-light row" style="border-radius: 0px">
                <div class="col-12 col-md-6">
                    <h1 class="text-white">@Model.carDTO.Make @Model.carDTO.Model</h1>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h1 class="text-danger">@Model.carDTO.PricePerDay PLN</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.carDTO.ImageUrl" style="width: 100%" class="rounded">
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge bg-primary text-success p-3 border">@Model.carDTO.Type</span>
                                    <p class="text-secondary pt-3">@Model.carDTO.Description</p>
                                </div>
                                <div class="row mx-0">
                                    <label>Start Date</label>
                                    <input class="form-control" type="date" asp-for="@Model.StartDate">
                                </div>
                                <div class="row mx-0">
                                    <label>End Date</label>
                                    <input class="form-control" type="date" asp-for="@Model.EndDate">
                                </div>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>
            @if(User.IsInRole("User"))
            {
                <div class="card-footer row bg-dark">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-square btn-success form-control btn-lg" style="height:50px">Back</a>
                    </div>
                    <div class="col-12 col-md-6">
                        <button class="btn btn-primary btn-lg form-control" style="height:50px;" type="submit">Reserve</button>
                    </div>
                </div>
            }

            @if(User.IsInRole("Admin"))
            {
                <div class="card-footer row bg-dark">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-controller="Car" asp-action="EditCar" asp-route-id="@Model.carDTO.Id" class="btn btn-square btn-primary form-control btn-lg" style="height:50px">Edit</a>
                    </div>
                    <div class="col-12 col-md-6">
                        <a asp-controller="Car" asp-action="DeleteCar" asp-route-id="@Model.carDTO.Id" class="btn btn-danger btn-lg form-control"  style="height:50px;">Delete</a>
                    </div>
                </div>
            }
           
        </div>
    </div>
</form>